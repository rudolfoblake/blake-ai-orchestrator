DEEPSEEK_API_KEY=sk-xxx
GEMINI_API_KEY=sk-xxx
DATABASE_URL=postgresql://user:pass@db:5432/blake_ai
REDIS_URL=redis://redis:6379
LOG_LEVEL=INFO
CACHE_TTL=300
MAX_TOKENS=2048
TEMPERATURE=0.7
INFER_WEIGHT_SIMILARITY=0.4
INFER_WEIGHT_CONFIDENCE=0.3
INFER_WEIGHT_CONTEXT=0.3
ENABLED_PROVIDERS=openai,claude,deepseek,gemini
PERSONA_DEFAULT=You are a helpful and concise orchestrator.
PERSONA_OPENAI=
PERSONA_CLAUDE=
PERSONA_DEEPSEEK=
PERSONA_GEMINI=
OPENAI_MODEL=gpt-4o-mini
CLAUDE_MODEL=claude-3-opus-20240229
DEEPSEEK_MODEL=deepseek-chat
GEMINI_MODEL=gemini-pro
MONITORING_URL=http://monitoring-api:9100
MONITOR_LOG_PATH=monitoring/logs/events.log
FRONTEND_ORIGIN=http://localhost:3000
### SECURITY SETTINGS ###
# Comma-separated origins allowed for backend CORS. Defaults to FRONTEND_ORIGIN.
CORS_ALLOW_ORIGINS=
# Comma-separated hosts the backend trusts (TrustedHostMiddleware)
ALLOWED_HOSTS=localhost,127.0.0.1
# Force HTTPS redirect (set to true in production behind HTTP->HTTPS)
FORCE_HTTPS=false
# Redact prompts and final answers from DB and monitoring logs
REDACT_PROMPTS=true
# Comma-separated origins allowed to access monitoring endpoints
MONITOR_ALLOWED_ORIGINS=http://localhost:8000,http://localhost:3000
# Redact fields when writing monitoring logs to disk
MONITOR_REDACT=true

# Encryption for DB logs (Fernet key base64). Generate with:
# python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
LOG_ENCRYPTION_KEY=